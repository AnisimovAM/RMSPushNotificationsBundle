<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rms_push_notifications.android.class">RMS\PushNotificationsBundle\Service\OS\AndroidNotification</parameter>
    </parameters>

    <services>

        <!-- Android GCM -->
        <service id="rms_push_notifications.android" class="%rms_push_notifications.android.class%" public="false">
            <argument>%rms_push_notifications.android.api_key%</argument>
            <argument>%rms_push_notifications.android.use_multi_curl%</argument>
            <argument>%rms_push_notifications.android.timeout%</argument>
            <argument type="service" id="logger" />
            <argument>%rms_push_notifications.android.dry_run%</argument>
            <tag name="rms_push_notifications.handler" osType="rms_push_notifications.os.android" />
        </service>

    </services>

</container>
